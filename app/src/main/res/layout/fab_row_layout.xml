<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="70.0dip">


    <LinearLayout
        android:orientation="horizontal"
        android:background="#ffd9dadb"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="fill_parent"
        android:layout_height="70.0dip"
        android:weightSum="5.0">

        <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8.0dip"
            android:layout_weight="1.0">
            <TextView android:textSize="18.0sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:id="@+id/row_word"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:singleLine="true" />
            <!-- <TextView android:textSize="14.0sp"
                 android:gravity="center_vertical"
                 android:id="@+id/row_desc"
                 android:layout_width="fill_parent"
                 android:layout_height="25.0dip"
                 android:singleLine="true" />-->
            <TextView android:textSize="10.0sp"
                android:gravity="center_vertical"
                android:id="@+id/row_time"
                android:layout_width="fill_parent"
                android:layout_height="15.0dip"
                android:singleLine="true" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4.0">
            <ImageButton android:id="@+id/btn_del_row"
                android:tag=""
                android:background="#ff969ea1"
                android:padding="20.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/remove"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:onClick="deleteData"
                 />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
